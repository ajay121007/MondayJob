<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mondayjob.mondayjob">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.AdvancedSearchActivity"></activity>
        <activity android:name=".view.activity.SearchPageActivity" />
        <activity android:name=".view.activity.Search_Activity" />
        <activity android:name=".view.activity.LanguageActivity" />
        <activity android:name=".view.activity.Contact_Us_Activity" />
        <activity android:name=".view.activity.EditProfileActivity" />
        <activity android:name=".view.activity.ProfileActivity" />
        <activity android:name=".view.activity.HistoryJobDetailActivity" />
        <activity android:name=".view.activity.JobDetailActivity" />
        <activity android:name=".view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.MainActivity" />
    </application>

</manifest>