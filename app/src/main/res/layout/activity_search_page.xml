<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.mondayjob.mondayjob.view.activity.SearchPageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FBFBFB">
        <com.mondayjob.mondayjob.controller.CustomViews.MyTextViewMedium
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_16sdp"
            android:text="@string/search"
           android:layout_marginTop="@dimen/_2sdp"
            android:textColor="@color/colourblue"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <include layout="@layout/custom_search_toolbar" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGray"/>

    <com.mondayjob.mondayjob.controller.CustomViews.MyTextViewMedium
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_16sdp"
        android:text="@string/Advanced"
        android:gravity="right"
        android:id="@+id/tv_advanced"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/green"
        android:layout_height="wrap_content"/>
</LinearLayout>
